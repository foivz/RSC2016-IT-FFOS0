<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HackathonVZ</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/dist/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body class="body">
    
    <div class="container">
        <header class="header">
            <div class="wrapper">
            <div class="logo">
            <a href="@Url.Action("Index", "Home")"><img class="logo__image" src="~/dist/images/logo.svg">   </a>
                
            </div>
                <div class="nav">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </header>

        @RenderBody()
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/dist/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="~/dist/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
