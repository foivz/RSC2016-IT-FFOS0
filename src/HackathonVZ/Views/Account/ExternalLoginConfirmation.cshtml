@model ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="wrapper wrapper--narrow wrapper--padding">
        <div class="login">

        <h2 class="login__title">Register</h2>
            <h3 class="u-type--gamma login__subtitle">Associate your @ViewData["LoginProvider"] account</h3>

            <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>

                <p class="login__info">
                    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                    Please enter an email address for this site below and click the Register button to finish
                    logging in.
                </p>
                <div class="field">
                    <label asp-for="Email" class="field__lbl"></label>
                    <input asp-for="Email" class="form-control input input--text login__input input--lrg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="field__lbl">
                <button type="submit" class="btn btn--bordered--alt rounds__button btn--lrg">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
